pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Backend') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Deploy Backend') {
            steps {
                sh 'pkill -f "springboot-react-app" || true'
                sh 'nohup java -jar target/*.jar > springboot-react-app.log 2>&1 &'
            }
        }
    }
}
