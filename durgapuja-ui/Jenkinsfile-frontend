pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Frontend') {
            steps {
                dir('durgapuja-ui') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy Frontend') {
            steps {
                sh '''
                    sudo -S rm -rf /var/www/html/*
                    sudo cp -r build/* /var/www/html/
                    sudo systemctl restart nginx
                    echo YOUR_SUDO_PASSWORD

                '''
            }
        }
    }
}
